<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>wpsj_demo</display-name>
  <welcome-file-list>
    <welcome-file>logon.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>TestingServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.MyFirstServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TestingServlet</servlet-name>
    <url-pattern>/HelloServlets</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Logon</display-name>
    <servlet-name>Logon</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.LogonServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logon</servlet-name>
    <url-pattern>/logon</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>showheader</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.lessons.ShowRequestHeaders</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>showheader</servlet-name>
    <url-pattern>/show-request-headers</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>longservlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.lessons.LongServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>longservlet</servlet-name>
    <url-pattern>/long-servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ViewEmployees</display-name>
    <servlet-name>ViewEmployees</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.ViewEmployees</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewEmployees</servlet-name>
    <url-pattern>/view-employees</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>EditEmployee</display-name>
    <servlet-name>EditEmployee</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.EditEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditEmployee</servlet-name>
    <url-pattern>/edit-employee</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/pageError.jsp</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>AddEmployee</display-name>
    <servlet-name>AddEmployee</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.AddEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddEmployee</servlet-name>
    <url-pattern>/add-employee</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>csc.traning.wpsj.servlet.DatabaseInitializer</listener-class>
  </listener>
  <listener>
    <listener-class>csc.traning.wpsj.servlet.SessionCreationListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Logger</filter-name>
    <filter-class>csc.traning.wpsj.servlet.filter.LogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Logger</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>CounterServlet</display-name>
    <servlet-name>CounterServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.CounterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CounterServlet</servlet-name>
    <url-pattern>/count-online</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>FileUploadServlet</display-name>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.upload.FileUploadServlet</servlet-class>
    <init-param>
      <param-name>sizeThreshold</param-name>
      <param-value>1</param-value>
    </init-param>
    <init-param>
      <param-name>limitCapacity</param-name>
      <param-value>10</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/file-upload-action</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ZipDownloadServlet</display-name>
    <servlet-name>ZipDownloadServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.ZipDownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ZipDownloadServlet</servlet-name>
    <url-pattern>/zip-files-download</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ViewFileFolderServlet</display-name>
    <servlet-name>ViewFileFolderServlet</servlet-name>
    <servlet-class>csc.traning.wpsj.servlet.upload.ViewFileFolderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewFileFolderServlet</servlet-name>
    <url-pattern>/ViewFileFolderServlet</url-pattern>
  </servlet-mapping>
</web-app>